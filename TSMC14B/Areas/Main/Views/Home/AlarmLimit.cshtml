@*@model TSMC14B.Areas.Main.Models.AlarmLimitModel
*@
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = @TSMC14B.Menu.EqLimitSetting;
}

@section JavaScript{
    <link href="@Url.Content("~/Content/Themes/Shared/flexigrid/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.flexigrid.js")" type="text/javascript"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('.flexme').flexigrid({
                title: '@TSMC14B.Menu.LimitList',
            width: 1200,
            height: "auto",
            //url: '@Url.Action("JsonAlarmLimit")',
            dataType: 'json',
            colModel: [
                { display: '@TSMC14B.Menu.department_name', name: 'department_name', width: 50, sortable: false, align: 'center', hide: false },
                { display: '', name: 'FullTagName', width: 70, sortable: false, align: 'center', hide: true },
                { display: 'TagName', name: 'FDC_Tag', width: 330, sortable: false, align: 'left', hide: false },
                { display: '@TSMC14B.Menu.Limit_Max_Setting', name: 'Limit_Max_Setting', width: 70, sortable: false, align: 'center', hide: false },
                { display: '@TSMC14B.Menu.Limit_Max', name: 'Limit_Max', width: 70, sortable: false, align: 'center', hide: true },
                { display: '@TSMC14B.Menu.IsHiEnable', name: 'IsHiEnable', width: 70, sortable: false, align: 'center', hide: true },
                { display: '@TSMC14B.Menu.Limit_Min_Setting', name: 'Limit_Min_Setting', width: 70, sortable: false, align: 'center', hide: false },
                { display: '@TSMC14B.Menu.Limit_Min', name: 'Limit_Min', width: 70, sortable: false, align: 'center', hide: true },
                { display: '@TSMC14B.Menu.IsLoEnable', name: 'IsLoEnable', width: 70, sortable: false, align: 'center', hide: true },
                { display: 'DelayTime(sec)', name: 'DelayTime', width: 90, sortable: false, align: 'center', hide: false },
                { display: '@TSMC14B.Menu.LastEditUser', name: 'login_name', width: 60, sortable: false, align: 'center', hide: false },
                { display: '@TSMC14B.Menu.Setting', name: 'edit', width: 60, sortable: false, align: 'center', hide: false }
            ],
            procmsg: '@TSMC14B.Menu.procmsg',
            rptext: '@TSMC14B.Menu.rptext',
            pagestat: '@TSMC14B.Menu.pagestat',
            pagetext: '@TSMC14B.Menu.pagetext',
            outof: '@TSMC14B.Menu.outof',
            nomsg: '@TSMC14B.Menu.nomsg',
            usepager: true,
            useRp: true,
            rp: 20,
            nowrap: false,
            onSuccess: function () {
                $('.flexme > tbody > tr > td[abbrr="edit"] > div').empty();
                $('.flexme > tbody > tr > td[abbrr="edit"] > div').each(function () {
                    if ($(this).parent().parent().children(':eq(0)').text() == '@Session["UserdepartmentName"]'  || parseInt('@Session["UserLevel"]') >= 600) {
                        $(this).append('<a href="#" class="edit" ><div style="width:10px;"><img src="@Url.Content("~/Content/Icons/Item.Edit.gif")" alt="@TSMC14B.Menu.Edit" /></div></a>');
                    }
                });

                $('.edit').click(function () {
                    OpenModelWindow('@Url.Action("EditLimit")?TagName=' + $(this).parent().parent().parent().children(':eq(1)').text(), { width: 700, height: 400, caption: "@TSMC14B.Menu.Edit", onclose: function () { $('.flexme').flexReload(); } });
                });

                $('.flexme > tbody > tr > td[abbrr="login_name"] > div').each(function () {
                    if ($(this).text().trim() != '') {
                        var tagname = $(this).parent().parent().children(':eq(1)').text();
                        console.log(tagname);
                        $(this).html('<a href="#" class="history" >' + $(this).text() + '</a>');
                    }
                });

                $('.history').click(function () {
                    OpenModelWindow('@Url.Action("AlarmLimitHistory")?TagName=' + $(this).parent().parent().parent().children(':eq(1)').text(), { width: 850, height: 600, caption: "History", onclose: function () {  } });
                });
            },
            singleSelect: true,
            rpOptions: [5, 10, 15, 20, 30, 50],
        });

        $('#tbxToolidtip1').keyup(function (event) {
            if (event.keyCode == 13) {
                location.href = '@Url.Action("AlarmLimit")?vName=@Request["vName"]&ToolID=' + $('#toolid').val() + '&ToolID2=' + $('#toolidd').val() + '&TagName2=' + $('#ddlTagName2').val();
            } else {
                changeIndex($("#tbxToolidtip1").val(), 'toolid');
            }
        });

        $('#tbxToolidtip2').keyup(function (event) {
            if (event.keyCode == 13) {
                @*location.href = '@Url.Action("PLCCheckLimit")?vName=@Request["vName"]&ToolID=' + $('#toolid').val();*@
            } else {
                changeIndex($("#tbxToolidtip2").val(), 'toolidd');
            }
        });

        function changeIndex(chkvalue, ddl) {
            var objval; var isFound; var tempval;
            if ((chkvalue == "")) {
                $("#" + ddl + " option:nth-child(1)").attr("selected", true);
                isFound = false;
                return;
            };

            $('#' + ddl + '>option[value^=' + chkvalue.toUpperCase() + '],#' + ddl + '>option[value^=' + chkvalue + ']').first().attr("selected", true);
            isFound = true;
            return;
        }; 

        $('#toolid').change(function () {
            location.href = '@Url.Action("PLCCheckLimit")?vName=@Request["vName"]&ToolID=' + $(this).val();
        });

        $('#department_name').change(function () {
            $.post('@Url.Action("JsonTool")', { "dName": this.value }, function (data) {
                $('#Tools').empty();

                for (var i in data) {
                    $('#Tools').append('<option value=' + data[i].Value + '>' + data[i].Text + '</option>');
                }
            }, "json");
        });
    });

    function ChartExport(id) {
        if (id == 'search') {
            var urlStr = '@Url.Action("JsonAlarmLimit")?tool=' + $('#Tools').val() + '&page=1&rp=20';
            $(".flexme").flexOptions({ url: urlStr });
            $('.flexme').flexReload();
        } else {
            location.href = "@Url.Action("AlarmLimit")?tool=" + $('#Tools').val() + "&output=" + id;;
        }
    }
    </script>
}
<h2>@TSMC14B.Menu.EqLimitSetting</h2>
<div align="left">
    <div>
        <table border="1" class="tb" style="width: 550px">
            <tr>
                <td style="text-align: left;">
                    <label for="lbl_department_name">@TSMC14B.Menu.plaseSelectDep</label>
                    <select id="department_name">
                        @foreach (var item in ViewBag.department_name as IEnumerable<SelectListItem>)
                        {
                            <option  value="@item.Value" 
                                
                                @if (item.Selected)
                                {
		                            @:selected="selected"
	                            }
                                >@item.Text</option>
                        }
                    </select>
                </td>
                <td>
                    <label for="lbl_chamberName">@TSMC14B.Menu.plaseSelectEQ</label>
                    <select id="Tools">
                        @foreach (var item in ViewBag.Tool)
                        {
                            <option  value="@item.Value" >@item.Text</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td style="text-align: right;"></td>
                <td style="text-align: right;"></td>
            </tr>
        </table>
        <input type="button" id="sbmit" value="@TSMC14B.Menu.Query" style="width: 80px" onclick="javascript: ChartExport('search');" />
        <input type="button" id="btnExport" value="@TSMC14B.Menu.ChartExport" style="width: 80px;display:none;" onclick="javascript: ChartExport('export');" />&nbsp;&nbsp;&nbsp;    
    </div>
    <table class="flexme"></table>
</div>
