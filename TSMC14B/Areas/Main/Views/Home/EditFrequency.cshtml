                        //}
                        if (frequency != 0 && tolerance != 0) {
                            if (Date.parse(st).valueOf() > Date.parse(Today1).valueOf() && Date.parse(tt).valueOf() < Date.parse(Today1).valueOf()) { $(this).css("color", "black"); $(this).css("background-color", "#dddddd"); }
