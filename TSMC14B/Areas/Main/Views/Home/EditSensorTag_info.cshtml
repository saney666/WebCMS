@model WebCMS.Areas.Main.Models.SensorTagModel

@{
    ViewBag.Title = @WebCMS.Menu.Edit;
}

@section JavaScript{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ("@ViewBag.Message" != "") {
                parent.hiAlert("@ViewBag.Message");
                CloseModelWindow();
            }
        });
    </script>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset style="width: 90%; margin: 0 auto;">
        <legend>@ViewBag.Title</legend>
        <ul class="ul">
            <li>@Html.LabelFor(model => model.Sensor)</li>
            <li>@Html.HiddenFor(model => model.Sensor)@Html.HiddenFor(model => model.plc_id)
                @Html.DisplayFor(model => model.Sensor)</li>
        </ul>
        <ul class="ul">
            <li>@Html.LabelFor(model => model.Tool)</li>
            <li>@Html.HiddenFor(model => model.Tool)@Html.DisplayFor(model => model.Tool)</li>
        </ul>
        <ul class="ul">
            <li>@Html.LabelFor(model => model.ToolType)</li>
            <li>@Html.DisplayFor(model => model.ToolType)</li>
        </ul>
        <ul class="ul">
            <li>@Html.LabelFor(model => model.chamber)</li>
            <li>@Html.DisplayFor(model => model.chamber)</li>
        </ul>
        <ul class="ul">
            <li>@Html.LabelFor(model => model.chamberTag)</li>
            <li>@Html.TextBoxFor(model => model.chamberTag, new { style = "width: 300px;" })</li>
        </ul>
        <ul class="ul">
            <li>@Html.LabelFor(model => model.sensorTag)</li>
            <li>@Html.TextBoxFor(model => model.sensorTag, new { style = "width: 300px;" })</li>
        </ul>
        <ul class="ul">
            <li>@Html.LabelFor(model => model.LinkProcessData)</li>
            <li>@Html.TextBoxFor(model => model.LinkProcessData, new { style = "width: 300px;" })</li>
        </ul>
        <ul class="ul">
            <li>
                <input type="submit" value="@WebCMS.Menu.confirm" style="width: 80px" />&nbsp;&nbsp;&nbsp;</li>
            <li>
                <input type="button" value="@WebCMS.Menu.Refill" style="width: 80px" onclick="javascript: location.reload();" />&nbsp;&nbsp;&nbsp;</li>
            <li>
                <input type="button" value="@WebCMS.Menu.Cancel" style="width: 80px" onclick="CloseModelWindow();" /></li>
        </ul>
    </fieldset>
}

