        <table width="500px" border="0" cellpadding="2" cellspacing="1" style="width:500px;border-width:0;padding:2px;margin:2px">
            <tr>
                <td align="center"><font size="3" color="#666666"><b>設備課別狀態</b></font></td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <table width="100%" cellspacing="2" border="0" bgcolor="#F5F5F5">
                            <tbody>
                                <tr>
                                    <td align="center" colspan="2" bgcolor="#C0C0C0">
                                        <a href='@Url.Action("StatusDetail")?vName=@Request["vName"]&gName=@item.GroupName'>
