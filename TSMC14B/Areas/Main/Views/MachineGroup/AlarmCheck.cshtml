        </tr>
        <tr>
            <td style="text-align: right;">
                <label id="lbl_device">請選擇課別</label>
            </td>
            <td>
                @Html.DropDownList("device", ViewBag.Device as IEnumerable<SelectListItem>, "請選擇")
            </td>
